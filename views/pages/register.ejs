<% include ../partials/header %>
			<div class="main">
				<div class="container">
	      	<div id="signupbox" style="margin-top:50px" class="mainbox col-md-8 col-md-offset-4 col-sm-2 col-sm-offset-2">
	          <div class="panel panel-info">
	            <div class="panel-heading">
	              <div class="panel-title"><b>Sign Up</b></div>
	              <div style="float:right; font-size: 85%; position: relative; top:-10px"><a id="signinlink" href="/login" onclick="$('#signupbox').hide(); $('#loginbox').show()"><b>Sign In</b></a></div>
	            </div>
							<br>
	          <div class="panel-body" >
	            <form action="/register" method="post" id="signupform" class="form-horizontal" role="form">
								<div class="form-group">
	                <label for="email" class="col-md-8 control-label">Username</label>
	                <div class="col-md-9">
	                  <input type="text" class="form-control" name="email" placeholder="User name">
	                </div>
	              </div>
	    					<div class="form-group">
	                <label for="email" class="col-md-8 control-label">Email</label>
	                <div class="col-md-9">
	                  <input type="text" class="form-control" name="email" placeholder="Email Address">
	                </div>
	              </div>
	              <div class="form-group">
	                <label for="firstname" class="col-md-8 control-label">First Name</label>
	                <div class="col-md-9">
	                  <input type="text" class="form-control" name="firstname" placeholder="First Name">
	                </div>
	              </div>
	              <div class="form-group">
	              	<label for="lastname" class="col-md-8 control-label">Last Name</label>
	                <div class="col-md-9">
	                	<input type="text" class="form-control" name="lastname" placeholder="Last Name">
	                </div>
	              </div>
	              <div class="form-group">
	                <label for="password" class="col-md-8 control-label">Password</label>
	                <div class="col-md-9">
	                	<input type="password" class="form-control" name="password" placeholder="Password">
	              	</div>
	            	</div>

								<div class="form-group">
	              <!-- Button -->
	                <div class="col-md-offset-3 col-md-9">
	                  <a href="/register" id="btn-signup" type="button" class="btn btn-info"><i class="icon-hand-right"></i> Sign Up</a>
	                  <span style="margin-left:8px;">or</span>
										<span>&nbsp;</span>
										<span><a href="https://www.facebook.com/" id="btn-fbsignup" type="button" class="btn btn-primary"><i class="icon-facebook"></i> Sign Up with Facebook </a></span>
	                </div>
	              </div>
							</form>
	          </div>
	        	</div>
	       	</div>
  			</div>
			</div>
		</div><!-- container -->
<% include ../partials/footer %>
